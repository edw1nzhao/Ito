<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_land_xhdpi"
    tools:context=".controller.LoginActivity">

    <TextView
        android:id="@+id/login_textview_login"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="63dp"
        android:text="@string/login_text_login"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_edittext_password"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/login_edit_password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_edittext_email" />

    <EditText
        android:id="@+id/login_edittext_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="@string/login_edit_email"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button_image" />

    <Switch
        android:id="@+id/login_switch_remember_me"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="18dp"
        android:text="@string/login_switch_remember_me"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_edittext_password" />

    <Button
        android:id="@+id/login_button_register"
        android:layout_width="94dp"
        android:layout_height="49dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="8dp"
        android:text="@string/login_button_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_switch_remember_me" />

    <Button
        android:id="@+id/login_button_login"
        android:layout_width="94dp"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="@string/login_button_login"
        app:layout_constraintStart_toEndOf="@+id/login_button_register"
        app:layout_constraintTop_toBottomOf="@+id/login_switch_remember_me" />

    <ImageButton
        android:id="@+id/login_button_image"
        android:layout_width="104dp"
        android:layout_height="103dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_textview_login" />
</android.support.constraint.ConstraintLayout>